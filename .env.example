# eBay API Configuration
EBAY_APP_ID=your_ebay_app_id_here
EBAY_CERT_ID=your_ebay_cert_id_here
EBAY_RU_NAME=your_ebay_ru_name_here
EBAY_AUTH_CODE=your_ebay_auth_code_here
EBAY_SANDBOX=true
EBAY_MERCHANT_LOCATION=your_merchant_location_key_here

# Application Configuration
PORT=3000
NODE_ENV=development

# eBay Marketplace Configuration
EBAY_MARKETPLACE_ID=EBAY_US
EBAY_CURRENCY=USD
EBAY_COUNTRY_CODE=US

# OAuth2 Configuration
EBAY_OAUTH_SCOPE=https://api.ebay.com/oauth/api_scope https://api.ebay.com/oauth/api_scope/sell.inventory https://api.ebay.com/oauth/api_scope/sell.fulfillment

# Logging
LOG_LEVEL=debug